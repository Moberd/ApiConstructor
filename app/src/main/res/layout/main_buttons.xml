<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/routeBtn"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="/some_api_method/maybe_some_id"
        android:layout_marginEnd="@dimen/indent.s"
        android:layout_marginStart="@dimen/indent.s"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/auth_lock"
        android:layout_width="@dimen/indent.m"
        android:layout_height="@dimen/indent.m"
        android:src="@drawable/baseline_lock_open_24"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/indent.l"
        android:visibility="invisible"/>
</androidx.cardview.widget.CardView>